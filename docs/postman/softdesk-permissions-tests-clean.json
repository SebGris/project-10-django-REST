    {
      "name": "Tests Utilisateurs",
      "item": [
        {
          "name": "Login Alice",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('alice_token', response.access);",
                  "    pm.environment.set('access_token', response.access);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
