{
  "info": {
    "name": "SoftDesk - Tests de Permissions (Clean)",
    "description": "Tests des permissions de l'API SoftDesk",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Setup Initial",
      "item": [
        {
          "name": "Créer Alice",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('alice_id', response.id);",
                  "    pm.environment.set('alice_username', response.username);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"alice_{{$timestamp}}\",\n    \"email\": \"alice@test.com\",\n    \"first_name\": \"Alice\",\n    \"last_name\": \"Auteur\",\n    \"age\": 25,\n    \"can_be_contacted\": true,\n    \"can_data_be_shared\": false,\n    \"password\": \"TestPass123!\",\n    \"password_confirm\": \"TestPass123!\"\n}"
            },
            "url": {
              "raw": "{{api_url}}/users/",
              "host": ["{{api_url}}"],
              "path": ["users", ""]
            }
          }
        },
        {
          "name": "Créer Bob",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
