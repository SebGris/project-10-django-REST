                  "    pm.environment.set('charlie_id', response.id);",
                  "    pm.environment.set('charlie_username', response.username);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
